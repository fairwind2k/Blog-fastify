extends ../layouts/page.pug

block content
    if error
        p= error.message

    form(action = '/courses', method = 'post')
        div
            label title:
                input(type = 'text', name  = 'title', value = title)
        div
            label description:
                input(type = 'text', name = 'description', value = description)
        input(type = 'submit', value = 'Submit')